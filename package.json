{
  "name": "better-auth-convex",
  "version": "0.4.3",
  "description": "Better Auth Convex local integration",
  "keywords": [
    "convex",
    "auth",
    "authentication",
    "better-auth"
  ],
  "bugs": {
    "url": "https://github.com/udecode/better-auth-convex/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/udecode/better-auth-convex.git"
  },
  "license": "Apache-2.0",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "module": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "brl": "sh tooling/brl.sh",
    "build": "tsup",
    "build:watch": "tsup:watch",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "release": "bun run build && bun changeset publish",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch"
  },
  "dependencies": {
    "common-tags": "^1.8.2",
    "convex-helpers": "^0.1.104",
    "remeda": "^2.32.0",
    "type-fest": "^4.39.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@changesets/cli": "2.27.11",
    "@changesets/get-github-info": "0.6.0",
    "@convex-dev/better-auth": "0.9.6",
    "@types/common-tags": "^1.8.4",
    "@types/node": "^24.5.2",
    "barrelsby": "^2.8.1",
    "better-auth": "1.3.27",
    "convex": "1.26.2",
    "lefthook": "^2.0.4",
    "tsup": "8.5.0",
    "typescript": "5.9.2",
    "ultracite": "^6.3.6"
  },
  "peerDependencies": {
    "@convex-dev/better-auth": ">=0.9.6",
    "better-auth": ">=1.3.27",
    "convex": ">=1.26.2"
  },
  "packageManager": "bun@1.3.3",
  "publishConfig": {
    "access": "public"
  }
}
