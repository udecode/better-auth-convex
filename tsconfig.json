{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "jsx": "react-jsx",

    "target": "ESNext",
    "lib": ["ES2021", "dom", "DOM.Iterable"],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "tsc-alias": {
    "resolveFullPaths": true
  },

  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cts",
    "**/*.ctsx",
    "**/*.mts",
    "**/*.mtsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.cjs",
    "**/*.cjsx",
    "**/*.mjs",
    "**/*.mjsx",
    ".contentlayer/generated"
  ],
  "exclude": ["node_modules", "dist"]
}
